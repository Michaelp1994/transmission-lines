{
    "compilerOptions": {
        "composite": false,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "outDir": "dist",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "preserveWatchOutput": true,
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": true,
        "baseUrl": "./",
        "paths": {
            "@classes/*": ["./src/classes/*"],
            "@elements/*": ["./src/classes/elements/*"],
            "@enums/*": ["./src/enums/*"],
            "@helpers/*": ["./src/helpers/*"]
        }
    },
    "include": ["src", "tests"],
    "exclude": ["node_modules", "dist"],
    "tsc-alias": {
        "resolveFullPaths": true
    }
}
