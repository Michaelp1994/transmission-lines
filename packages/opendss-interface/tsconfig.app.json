{
    "extends": "@repo/typescript-config/node.json",
    "compilerOptions": {
        "composite": true,
        "baseUrl": "./",
        "paths": {
            "@classes/*": ["./src/classes/*"],
            "@elements/*": ["./src/classes/elements/*"],
            "@enums/*": ["./src/enums/*"],
            "@helpers/*": ["./src/helpers/*"],
            "@/*": ["./src/*"]
        },
        "outDir": "dist/app"
    },
    "include": ["src"],
    "exclude": [
        "src/**/*.test.ts",
        "src/**/*.test.tsx",
        "src/**/*.test.js",
        "src/**/*.test.jsx"
    ]
}
