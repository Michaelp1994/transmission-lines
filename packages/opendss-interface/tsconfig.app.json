{
    "extends": "@repo/typescript-config/node.json",
    "compilerOptions": {
        "composite": true,
        "baseUrl": "./",
        "paths": {
            "@classes/*": ["./src/classes/*"],
            "@elements/*": ["./src/classes/elements/*"],
            "@enums/*": ["./src/enums/*"],
            "@helpers/*": ["./src/helpers/*"]
        },
        "outDir": "dist"
    },
    "include": ["src"]
}
