{
    "name": "@repo/db",
    "type": "module",
    "exports": {
        ".": "./src/index.ts",
        "./drizzle": "./src/drizzle.ts",
        "./schemas/*": "./src/schemas/*.ts",
        "./migrate": "./src/migrations/index.ts",
        "./migrations/*": "./src/migrations/**"
    },
    "types": "./src/db.ts",
    "scripts": {
        "clean": "rm -rf .turbo node_modules dist",
        "db:push": "drizzle-kit push:sqlite",
        "seed": "tsx tests/seedDb.ts",
        "db:studio": "drizzle-kit studio",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "migrate": "drizzle-kit generate:sqlite",
        "test": "vitest run",
        "typecheck": "tsc --build"
    },
    "dependencies": {
        "better-sqlite3": "^11.2.1",
        "drizzle-orm": "^0.33.0",
        "drizzle-zod": "^0.5.1",
        "uuid": "^10.0.0"
    },
    "devDependencies": {
        "@repo/eslint-config": "workspace:*",
        "@repo/typescript-config": "workspace:*",
        "@types/better-sqlite3": "^7.6.11",
        "@types/node": "^22.5.4",
        "@types/uuid": "^10.0.0",
        "drizzle-kit": "^0.24.2",
        "eslint": "^9.9.1",
        "faker": "^6.6.6",
        "is-electron": "^2.2.2",
        "tsx": "^4.19.0",
        "typescript": "^5.5.4",
        "unplugin-swc": "^1.5.1",
        "vite": "^5.4.3",
        "vite-tsconfig-paths": "^5.0.1",
        "vitest": "^2.0.5"
    }
}
