{
    "name": "@repo/db",
    "type": "module",
    "exports": {
        ".": "./dist/dataSource.js",
        "./models/*": "./dist/models/*.js",
        "./migrations/*": "./dist/migrations/*.js"
    },
    "types": "./dist/dataSource.d.ts",
    "scripts": {
        "build": "tsc && tsc-alias",
        "clean": "rm -rf .turbo node_modules dist",
        "lint": "eslint src/",
        "test": "vitest run",
        "typecheck": "tsc --noEmit",
        "watch": "tsc && (concurrently \"tsc -w\" \"tsc-alias -w\")"
    },
    "dependencies": {
        "typeorm": "^0.3.20"
    },
    "devDependencies": {
        "@repo/eslint-config": "workspace:*",
        "@repo/typescript-config": "workspace:*",
        "@swc/core": "^1.4.0",
        "@types/node": "^20.11.16",
        "better-sqlite3": "^9.4.0",
        "concurrently": "^8.2.2",
        "eslint": "^8.56.0",
        "jest": "^29.7.0",
        "reflect-metadata": "^0.2.1",
        "ts-jest": "^29.1.2",
        "tsc-alias": "^1.8.8",
        "typescript": "^5.3.3",
        "unplugin-swc": "^1.4.4",
        "vite": "^5.0.12",
        "vite-tsconfig-paths": "^4.3.1",
        "vitest": "^1.2.2"
    },
    "peerDependencies": {
        "better-sqlite3": "^9.3.0"
    }
}
