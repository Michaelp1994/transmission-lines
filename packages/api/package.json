{
    "name": "@repo/api",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "exports": {
        ".": "./dist/index.js",
        "./routers/*": "./dist/routers/*.js"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsc && tsc-alias",
        "clean": "rm -rf .turbo node_modules dist",
        "lint": "eslint src/",
        "test": "vitest run",
        "typecheck": "tsc --noEmit",
        "watch": "tsc && (concurrently \"tsc -w\" \"tsc-alias -w\")"
    },
    "dependencies": {
        "@repo/db": "workspace:^",
        "@repo/logger": "workspace:*",
        "@repo/opendss-interface": "workspace:^",
        "@repo/validators": "workspace:*",
        "@trpc/server": "^10.45.1",
        "body-parser": "^1.20.2",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "mathjs": "^12.3.1",
        "morgan": "^1.10.0",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@repo/eslint-config": "workspace:*",
        "@repo/jest-presets": "workspace:*",
        "@repo/typescript-config": "workspace:*",
        "@types/body-parser": "^1.19.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.11.16",
        "@types/supertest": "^6.0.2",
        "better-sqlite3": "^9.4.0",
        "concurrently": "^8.2.2",
        "electron": "^28.2.2",
        "eslint": "^8.56.0",
        "supertest": "^6.3.4",
        "tsc-alias": "^1.8.8",
        "typeorm": "^0.3.20",
        "typescript": "^5.3.3",
        "vite": "^5.0.12",
        "vitest": "^1.2.2"
    }
}
