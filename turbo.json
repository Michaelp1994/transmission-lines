{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "globalEnv": ["PORT"],
    "pipeline": {
        "build": {
            "dependsOn": ["^build"]
        },
        "package": {
            "dependsOn": ["desktop#build", "gui#build"],
            "outputs": ["dist/**"]
        },
        "rebuild": {
            "cache": false
        },
        "test": {
            "outputs": ["coverage/**"],
            "dependsOn": []
        },
        "lint": {},
        "lint:fix": {},
        "typecheck": {},
        "dev": {
            "dependsOn": ["^build"],
            "cache": false,
            "persistent": true
        },
        "clean": {
            "cache": false
        },
        "watch": {
            "cache": false
        }
    }
}
